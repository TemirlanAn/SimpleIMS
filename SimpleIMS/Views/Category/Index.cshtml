@model CategoryListViewModel

<a class="btn btn-success" asp-controller="Category" asp-action="Add">Add</a>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Products by category</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var category in Model.Categories)
    {
        <tr>
          <th scope="row">@category.Id</th>
          <th scope="row">@category.Name</th>
          <th scope="row">@category.ProductByCategory</th>
          <th>
            <a class="btn btn-primary" asp-area="" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">
              <i class="bi bi-pencil-square"></i>
            </a>
            <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-bs-id="@category.Id">
              <i class="bi bi-trash"></i>
            </button>
          </th>
        </tr>
    }
  </tbody>
</table>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="modalDeleteLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalDeleteLabel">Are you sure?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form asp-controller="Category" asp-action="Delete" class="row g-3">
          <input type="hidden" id="id" name="id"/>
          <div class="col-auto">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
          </div>
          <div class="col-auto">
            <button type="submit" class="btn btn-danger">Yes</button>
          </div>                         
        </form>
      </div>
    </div>
  </div>
</div>
